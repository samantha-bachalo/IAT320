input.onGesture(Gesture.FaceUp, function () {
    Sound_Variable = 1
})

input.onGesture(Gesture.FaceDown, function () {
    Sound_Variable = 0
})

let Sound_Variable = 0
music.setVolume(255)
pins.A3.digitalWrite(true)
music.playMelody("C D E D C G C5 - ", 175)
pins.A3.digitalWrite(false)
Sound_Variable = 0

forever(function () {
    if (Sound_Variable >= 1) {
        music.setTempo(150)
        auldLangSyne()
    }
})
