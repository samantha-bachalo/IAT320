function auldLangSyne () {
    pins.A3.digitalWrite(true)
    music.playTone(131, music.beat(BeatFraction.Whole))
    if (Sound_Variable != 1) {
        pins.A3.digitalWrite(false)
        return
    }
    music.playTone(175, music.beat(BeatFraction.Double))
    if (Sound_Variable != 1) {
        pins.A3.digitalWrite(false)
        return
