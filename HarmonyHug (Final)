        pins.A3.digitalWrite(false)
        return
    }
    music.playTone(220, music.beat(BeatFraction.Double))
    if (Sound_Variable != 1) {
        pins.A3.digitalWrite(false)
        return
    }
    music.playTone(262, music.beat(BeatFraction.Whole))
    if (Sound_Variable != 1) {
        pins.A3.digitalWrite(false)
        return
    }
    music.playTone(294, music.beat(BeatFraction.Breve))



